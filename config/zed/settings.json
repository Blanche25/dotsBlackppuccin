// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "experimental.theme_overrides": {
    "editor.background": "#000000",
    "background": "#000000",
    "panel.background": "#000000",
    "surface.background": "#000000",
    "toolbar.background": "#000000",
    "title_bar.background": "#000000",
    "editor.gutter.background": "#000000",
    "tab_bar.background": "#000000",
    "tab.active_background": "#000000"
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_family": "IosevkaTerm Nerd Font",
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha - No Italics"
  },
  "languages": {
    "HTML": {
      "format_on_save": "off"
    },
    "CSS": {
      "format_on_save": "off"
    },
    "XML": {
      "format_on_save": "off"
    }
  }
}
